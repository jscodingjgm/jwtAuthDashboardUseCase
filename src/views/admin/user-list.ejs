<h2>User List</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% usersList.forEach(function(elem, index) { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= elem.name %></td>
            <td><%= elem.email %></td>
            <td><%= elem.role %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>